<div class="content-wrapper">
  <section class="content-header">
    <h1>
      Banks
    </h1>
  </section>
  <section class="content">
    <%= render 'layouts/flash_notice' %>
    <div class="row">
      <%= link_to 'New Bank', new_bank_path, class: 'btn bg-red margin' %>
      <div class="spacer5"></div>
      <div class="col-xs-12">
        <div class="box">
          <div class="box-body">
            <table aria-describedby="example2_info" class="table table-bordered table-hover dataTable" id="example2">
              <% if @banks.present? %>
                  <thead>
                  <tr>
                    <th>Sr.No.</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Contact</th>
                    <!-- %th Actions
                    -->
                  </tr>
                  </thead>
                  <tbody>
                  <%= render :partial => 'list_of_banks' %>
                  </tbody>
              <% else %>
                  No Bank Found
              <% end %>
            </table>
          </div>
        </div>
      </div>
      <div class="col-xs-6">
        <div class="dataTables_paginate paging_bootstrap">
          <ul class="pagination">
            <%#= paginate @banks %>
          </ul>
        </div>
      </div>
    </div>
  </section>
</div>
